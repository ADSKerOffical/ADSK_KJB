local function breakJ(character)
 for _, joint in ipairs(character:GetDescendants()) do
  if joint:IsA("Weld") or joint:IsA("Motor6D") and character.Humanoid.Health > 0 then
local args = {
    [1] = "DestroySomeThinggg",
    [2] = joint
}

game:GetService("ReplicatedStorage"):WaitForChild("AllRemoteEvents"):WaitForChild("CLientToServerR"):FireServer(unpack(args))
  end
 end
 
sound = Instance.new("Sound", character.Humanoid.RootPart)
sound.SoundId = "rbxassetid://531421188"
sound.Volume = 2.4
sound.PlaybackSpeed = 1
sound.Looped = false
sound:Play()
end
 
